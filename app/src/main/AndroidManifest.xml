<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.delicatessences.delicatessences"
    android:versionCode="4"
    android:versionName="1.1.0">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Delicatessences">

        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />

        <activity
            android:name="fr.delicatessences.delicatessences.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="http"
                    android:host="www.delicatessences.fr"
                    android:pathPrefix="/articles/carnet"/>
            </intent-filter>
        </activity>

        <activity
            android:name="fr.delicatessences.delicatessences.activities.EditEOActivity"
            android:label="@string/title_new_eo"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName="fr.delicatessences.delicatessences.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.delicatessences.delicatessences.activities.MainActivity" />
        </activity>

        <activity
            android:name="fr.delicatessences.delicatessences.activities.EditVOActivity"
            android:label="@string/title_new_vo"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName="fr.delicatessences.delicatessences.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.delicatessences.delicatessences.activities.MainActivity" />
        </activity>

        <activity
            android:name="fr.delicatessences.delicatessences.activities.EditRecipeActivity"
            android:label="@string/title_new_recipe"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName="fr.delicatessences.delicatessences.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.delicatessences.delicatessences.activities.MainActivity" />
        </activity>

        <activity
            android:name="fr.delicatessences.delicatessences.activities.EditBottleActivity"
            android:label="@string/title_new_bottle"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName="fr.delicatessences.delicatessences.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.delicatessences.delicatessences.activities.MainActivity" />
        </activity>


    </application>
</manifest>
