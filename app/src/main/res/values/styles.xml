<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="Theme.Delicatessences.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Delicatessences.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">#e51F495D</item>
        <item name="sv_showcaseColor">#25467A</item>
        <item name="sv_buttonText">@string/got_it</item>
        <item name="sv_titleTextAppearance">@style/ShowcaseTitleStyle</item>
        <item name="sv_detailTextAppearance">@style/ShowcaseTextStyle</item>
    </style>

    <style name="ShowcaseTitleStyle" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#deffffff</item>
    </style>

    <style name="ShowcaseTextStyle" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#8affffff</item>
    </style>

    <!--
    DEFAULT LAYOUT SAMPLE
    -->
    <style name="Irr">
    </style>
    <style name="Irr.Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Irr.Default.Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">17dp</item>
    </style>

    <style name="Irr.Default.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/irr_button_decline</item>
    </style>

    <style name="Irr.Default.Button.Accept">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:background">@drawable/irr_button_accept</item>
    </style>

</resources>
