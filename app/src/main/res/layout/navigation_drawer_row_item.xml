<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_list_item_height"
    android:paddingLeft="@dimen/navigation_drawer_list_item_padding_left"
    android:paddingRight="@dimen/navigation_drawer_list_item_padding_right"
    android:orientation="horizontal"
    android:background="@drawable/navigation_drawer_selector">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/navigation_drawer_item_avatar_icon_size"
        android:layout_height="@dimen/navigation_drawer_list_item_height"
        android:src="@drawable/ic_book"
        android:layout_gravity="center_vertical"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_label"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/navigation_drawer_text_padding_left"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:textSize="@dimen/navigation_drawer_text_size"
        android:textColor="@android:color/white">
    </TextView>

</LinearLayout>
